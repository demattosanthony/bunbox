    "start": "cd examples/basic && bun run start",
    "typecheck": "bun run --filter '*' typecheck"
  },
  "devDependencies": {
    "@types/bun": "^1.3.2",
    "typescript": "^5"
  },
  "engines": {
    "bun": ">=1.0.0"
  }
}
