{
  "name": "bunbox-monorepo",
  "version": "0.2.0",
  "private": true,
  "description": "Bunbox - A simple full-stack framework built on Bun",
  "author": "Anthony Demattos <demattosanthony@gmail.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/demattosanthony/bunbox.git"
  },
  "workspaces": [
    "packages/*",
    "examples/*",
    "apps/*"
