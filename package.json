{
  "name": "bunbox-monorepo",
  "version": "0.2.0",
  "private": true,
  "description": "Bunbox - A simple full-stack framework built on Bun",
  "author": "Anthony Demattos <demattosanthony@gmail.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/demattosanthony/bunbox.git"
  },
  "workspaces": [
    "packages/*",
    "examples/*",
    "apps/*"
  ],
  "scripts": {
    "dev:basic": " cd examples/basic && bun run dev",
    "dev:www": "bun run --filter @bunbox/www dev",
    "typecheck": "bun run --filter '*' typecheck",
    "build": "bun run --filter '*' build",
    "clean": "bun run --filter '*' clean"
  },
  "dependencies": {
    "react": "^19.2.0",
    "react-dom": "^19.2.0"
  },
  "devDependencies": {
    "@types/bun": "^1.3.2",
    "typescript": "^5"
  },
  "engines": {
    "bun": ">=1.0.0"
  }
}
