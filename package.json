{
  "name": "@ademattos/bunbox",
  "version": "0.1.0",
  "description": "A simple full-stack framework built on Bun - 100x simpler than Next.js",
  "author": "Anthony Demattos <demattosanthony@gmail.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/demattosanthony/bunbox.git"
  },
  "bugs": {
    "url": "https://github.com/demattosanthony/bunbox/issues"
  },
  "homepage": "https://github.com/demattosanthony/bunbox#readme",
  "main": "./src/index.ts",
  "module": "./src/index.ts",
  "types": "./src/index.ts",
  "type": "module",
  "exports": {
    ".": {
      "types": "./src/index.ts",
      "import": "./src/index.ts"
    },
    "./client": {
      "types": "./src/client/hydrate.tsx",
      "import": "./src/client/hydrate.tsx"
    }
  },
  "files": [
    "src",
    "LICENSE",
    "README.md"
  ],
  "scripts": {
    "dev": "bun --hot index.ts",
    "start": "bun index.ts",
    "build": "bun build src/index.ts --outdir dist --target bun"
  },
  "keywords": [
    "bun",
    "framework",
    "react",
    "ssr",
    "websocket",
    "api",
    "fullstack",
    "next",
    "routing"
  ],
  "dependencies": {
    "react": "^19.2.0",
    "react-dom": "^19.2.0"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "@types/react": "^18.3.12",
    "@types/react-dom": "^18.3.1"
  },
  "peerDependencies": {
    "typescript": "^5"
  },
  "engines": {
    "bun": ">=1.0.0"
  }
}
